<section id="venue-page">
  <div class="container">
    <div class="left"><img
        src="../../public/images/{{venue.venueImage}}"
        alt="{{venue.name}}"
        class="img"
      /></div>
    <div class="right">
      <div class="row">
        <h1 class="venue-title">{{venue.venueName}}</h1>
        <span class="report"><i class="fa fa-flag" id="reportButton"></i>
          <div class="report-container" id="reportDiv" hidden>
            <form
              id="reportForm"
              method="post"
              action="/report/{{venue._id}}/venue"
              onsubmit="return validate()"
            >
              <div class="input-fields">
                <label for="reportComment" class="label">
                  Problem
                  <textarea
                    class="input"
                    type="text"
                    name="reportComment"
                    placeholder="Describe the problem"
                    required
                  ></textarea>
                </label>
                <label
                  for="reportContentType"
                  class="label"
                  style="margin-top: 10px;"
                >
                  Report Type
                  <select
                    class="input"
                    style="background-color: white;"
                    name="reportContentType"
                    id="reportType"
                    required
                  >
                  </select>
                </label>
                <button
                  type="submit"
                  class="book-btn"
                  style="margin-top: 10px; width:100%"
                >Report</button>
              </div>
            </form>
          </div>
        </span>

      </div>
      <a
        class="map-hyperlink"
        href="https://maps.google.com/?q={{venue.venueAddress}}"
        target="_blank"
      >
        <h2 class="venue-address"><span><i
              class="fas fa-map-pin size-xl"
            ></i></span>
          {{venue.venueAddress}}
        </h2>
      </a>
      <h3 class="venue-rating"><span><i class="fas fa-star size-xl"></i></span>
        {{venue.venueRating}}
        ({{reviewCount}}
        review(s))
        <a href="/reviews/{{userId}}/{{venue._id}}" class="add-rev hint">Add a
          review.</a>
      </h3>
      <form
        action="/bookings/book"
        method="post"
        onsubmit="return validate()"
        id="book-form"
      >
        <h3 class="sports">
          <span><i class="fas fa-running"></i></span>
          Select Sport:
          <select class="sports-select" name="sport">
            {{#each venue.sports}}
              <option value="{{this}}">{{this}}</option>
            {{/each}}
          </select>
          {{! <p class="silent">Note: Each slot is for 1 hour only!</p> }}
        </h3>
        <h3 class="sports"><span><i class="fas fa-calendar-alt"></i></span>
          Date:
          <input type="date" name="date" class="date" />
        </h3>
        <h3 class="timings">
          <span><i class="fas fa-clock"></i></span>
          Start Timing:
          <select class="timing-select" name="startTime">
            {{#each venue.venueTimings}}
              <option value="{{timeSlot}}">{{timeSlot}}</option>
            {{/each}}
          </select>
          End Timing:
          <select class="timing-select" name="endTime">
            {{#each venue.venueTimings}}
              <option value="{{timeSlot}}">{{timeSlot}}</option>
            {{/each}}
          </select>
          <p class="silent">Note: Each slot is for 1 hour only!</p>
        </h3>
        <lable>
          <input name="bookingVenueId" value="{{venue._id}}" hidden />
        </lable>
        <lable>
          <input id="costVal" name="cost" hidden />
        </lable>
        <h3
          id="cost"
          name="cost"
          style="font-weight: normal; margin-bottom: 0px"
        ></h3>
        <button type="submit" class="book-btn">Book Now</button>
      </form>
      <lable>
        <input id="price" name="costPHr" value="{{venue.price}}" hidden />
      </lable>
      <div id="error" hidden>
        <ul id="err-list"></ul>
      </div>
    </div>
  </div>
  <div class="comment">
    <h1 class="comment-header">Comments</h1>
    <div class="comment-textbox">
      <form
        method="post"
        onsubmit="return validateComment()"
        id="comment-form"
        enctype="multipart/form-data"
      >
        <label for="comment-text">
          <textarea
            name="comment"
            id="comment-text"
            placeholder="Add a comment..."
            class="comment-text"
          ></textarea>
        </label>
        <button type="submit" class="comment-btn">Comment
          <span><i class="fas fa-paper-plane"></i></span>
        </button>
      </form>
    </div>
  </div>
</section>
<script src="/public/js/bookings.js"></script>
<script src="/public/js/report.js"></script>