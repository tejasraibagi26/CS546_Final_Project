        </div>
        <div class="row">
          <a
            href="/reviews/delete/{{venueReview1._id}}/{{venueReview1.venueId}}/{{venueid}}"
            id="open-add-modal14"
            class="btn"
          >
            Delete Review</a>
          <a
            href="/reviews/getinfo/{{venueReview1._id}}/{{venueReview1.venueId}}/{{venueid}}"
            class="btn"
          >
            Update Review</a>
          <a
            href="/reviews/getrating/{{venueReview1._id}}/{{venueReview1.venueId}}/{{venueid}}"
            id="open-add-modal15"
            class="btn"
          >
            Update Rating</a>
        </div>
        <br />
        <br />
        <br />
      {{/if}}

      {{#if venueReview}}
        <h2 class="act-title">All Reviews </h2>
      {{/if}}
      {{#each venueReview}}
        <div class="card">
          <div class="card-header">
            <div class="row">
              <img src="/public/images/user.png" alt="avatar" class="avatar" />
              <div class="user">
                <h2 class="name">{{this.reviewerId}}</h2>
                <p class="date">Posted on (Eastern Standard Time) :
                  {{this.createdAt1}}</p>
              </div>
            </div>
          </div>
          <div class="card-body">
            <div class="stat">
              <p class="stat-chip">Rating : {{this.rating}}</p>
              <p class="stat-chip">Votes : {{this.votes}}</p>
            </div>
            <p class="desc">{{this.reviewText}}
            </p>
          </div>
          <div class="card-footer">
            {{#if this.upvoted}}
              <a
                href="/reviews/upvote/{{this._id}}/{{this.venueId}}"
                class="btn1 liked"
                aria-label="Upvote"
              >
                <i class="fa fa-thumbs-up"></i>
              </a>
            {{else}}
              <a
                href="/reviews/upvote/{{this._id}}/{{this.venueId}}"
                class="btn1"
                aria-label="Upvote"
              >
                <i class="fa fa-thumbs-up"></i>
              </a>
            {{/if}}
            {{#if this.downvoted}}
              <a
                href="/reviews/downvote/{{this._id}}/{{this.venueId}}"
                class="btn1 disliked"
                aria-label="Downvote"
              >
                <i class="fa fa-thumbs-down"></i>
              </a>
            {{else}}
              <a
                href="/reviews/downvote/{{this._id}}/{{this.venueId}}"
                class="btn1"
                aria-label="Downvote"
              >
                <i class="fa fa-thumbs-down"></i>
              </a>
            {{/if}}
            <a
              href="/comments/addcomment/{{this.venueId}}/{{this._id}}/{{venue}}"
              class="add-rev hint"
            >Add a Comment</a>
            <a
              href="/comments/reviewcomments/{{this._id}}/{{venue}}"
              class="add-rev hint"
            >View All Comments
            </a>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
