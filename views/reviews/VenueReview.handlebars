<section id="activity">
  <div class="container">
    <div class="row">
      {{#if venueReview}}
        <h1 class="act-title">Reviews for {{venueName}}</h1>
        <a href="/venues/{{venueid}}" id="open-add-modal1" class="btn">
          Back to Venue</a>
      {{else}}
        <h3 class="act-title">No Reviews to display for {{venueName}} </h3>
        <a href="/venues/{{venueid}}" id="open-add-modal2" class="btn">
          Back to Venue</a>
      {{/if}}
    </div><br />
    {{#if venueReview}}
      <div id="beta">
        <a href="/reviews/oldest/{{venueid}}" id="open-add-modal3" class="btn">
          Oldest
        </a>
        <a href="/reviews/newest/{{venueid}}" id="open-add-modal4" class="btn">
          Newest
        </a>
        <a
          href="/reviews/mostupvote/{{venueid}}"
          id="open-add-modal5"
          class="btn"
        >
          Most Upvoted</a>
        <a
          href="/reviews/mostdownvote/{{venueid}}"
          id="open-add-modal6"
          class="btn"
        >
          Most Downvoted</a>
        <a href="/reviews/highest/{{venueid}}" id="open-add-modal7" class="btn">
          Positive</a>
        <a href="/reviews/lowest/{{venueid}}" id="open-add-modal8" class="btn">
          Critical</a>
        <a
          href="/reviews/filter/{{venueid}}/1"
          id="open-add-modal9"
          class="btn"
        >
          <i class="fas fa-star"></i>
          <i class="fa fa-plus"></i>
        </a>
        <a
          href="/reviews/filter/{{venueid}}/2"
          id="open-add-modal10"
          class="btn"
        >
          <i class="fas fa-star"></i><i class="fas fa-star"></i>
