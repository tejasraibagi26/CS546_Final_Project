<link rel="stylesheet" href="/public/css/reviews/createReview.css" />
<div id="createReview-page">
    <div class="createReview-container">
        <h1 id="createReviewTitle">Update Rating</h1>
        {{#if error1}}
        <h3 id="createReviewError1"> {{error1}}</h3>
        {{/if}}
        {{#if error2}}
        <h3 id="createReviewError2"> {{error2}}</h3>
        {{/if}}
        <h3 id="createReviewError" hidden> {{error}}</h3>
        <form action="/reviews/rating/{{id}}/{{userId}}/{{venueId}}" name="create" method="post" id="createReviewForm">
            <label class="createReviewLabel">Update Previous Rating
                <input name="rating" type="range" min="0" max="5" value="{{rating}}" class="createRatingInput"
                    id="reviewRating">
            </label>
            <p>Rating: <span id="demo"></span></p>

            <label><input type="submit" id="registerSubmit" value="Update Rating" /></label>
        </form>
        <script>
            let createRatingInput = document.getElementById("reviewRating");
            var output = document.getElementById("demo");
            output.innerHTML = createRatingInput.value;

            createRatingInput.oninput = function () {
                output.innerHTML = this.value;
            }
        </script>
        <a href="/reviews/venuereviews/{{venueId}}" id="venuelink">Cancel</a>
    </div>
</div>
<script src="/public/js/createReview.js"></script>
