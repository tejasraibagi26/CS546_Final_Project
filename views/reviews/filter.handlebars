<link rel="stylesheet" href="/public/css/reviews/venueReview.css" />
<section id="activity">
  <div class="container">
    <div class="row">
      <h1 class="act-title">Reviews for {{venueName}}</h1>
      <a href="/venues/{{venueid}}" id="open-add-modal1" class="btn">
        Back to Venue</a>
      <a href="/reviews/venuereviews/{{venueid}}" id="open-add-modal2" class="btn">
        <i class="fa fa-plus"></i>
        Clear Filters</a>
    </div><br>
    {{#if venueReview}}
    <div id="beta">
      <a href="/reviews/oldest/{{venueid}}" id="open-add-modal3" class="btn">
        Oldest </a>
      <a href="/reviews/newest/{{venueid}}" id="open-add-modal4" class="btn">
        Newest </a>
      <a href="/reviews/mostupvote/{{venueid}}" id="open-add-modal5" class="btn">
        Most Upvoted</a>
      <a href="/reviews/mostdownvote/{{venueid}}" id="open-add-modal6" class="btn">
        Most Downvoted</a>
      <a href="/reviews/highest/{{venueid}}" id="open-add-modal7" class="btn">
        Positive</a>
      <a href="/reviews/lowest/{{venueid}}" id="open-add-modal8" class="btn">
        Critical</a>
      <a href="/reviews/filter/{{venueid}}/1" id="open-add-modal9" class="btn">
        <i class="fas fa-star"></i> <i class="fa fa-plus"></i>
      </a>
      <a href="/reviews/filter/{{venueid}}/2" id="open-add-modal10" class="btn">
        <i class="fas fa-star"></i><i class="fas fa-star"></i> <i class="fa fa-plus"></i>
      </a>
      <a href="/reviews/filter/{{venueid}}/3" id="open-add-modal11" class="btn">
        <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i> <i class="fa fa-plus"></i>
      </a>
      <a href="/reviews/filter/{{venueid}}/4" id="open-add-modal12" class="btn">
        <i class="fas fa-star"></i> <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i
          class="fa fa-plus"></i>
      </a>
      <a href="/reviews/filter/{{venueid}}/5" id="open-add-modal13" class="btn">
        <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i
          class="fas fa-star"></i><i class="fa fa-plus"></i>
      </a>
    </div><br>
    {{/if}}
    <div class="posts">
      {{#if venueReview1}}
      <h2 class="act-title">Your Review </h2>
      <div class="card">
        <div class="card-header">
          <div class="row">
            <img src="/public/images/user.png" alt="avatar" class="avatar" />
            <div class="user">
              <h2 class="name">{{venueReview1.reviewerId}}</h2>
              <p class="date">Posted on (Eastern Standard Time) : {{venueReview1.createdAt1}}</p>
            </div>
          </div>
        </div>
        <div class="card-body">
          <div class="stat">
            <p class="stat-chip">Rating : {{venueReview1.rating}}</p>
            <p class="stat-chip">Votes : {{venueReview1.votes}}</p>
          </div>
          <p class="desc">{{venueReview1.reviewText}}
          </p>
        </div>
        <div class="card-footer">
          <a href="/reviews/upvote/{{venueReview1._id}}/{{venueReview1.venueId}}" class="btn1">
            <i class="fa fa-thumbs-up"></i>
          </a>
          <a href="/reviews/downvote/{{venueReview1._id}}/{{venueReview1.venueId}}" class="btn1">
            <i class="fa fa-thumbs-down"></i>
          </a>
        </div>
      </div>
      <br>
      <br>
      <br>
      {{/if}}

      {{#if venueReview}}
      <h2 class="act-title">All Reviews </h2>
      {{/if}}
      {{#if percentage}}
      <div class="card">
        <h2>{{percentage}} % people rated "{{rating}}" and above for the venue "{{venueName}}" </h2>
      </div>
      {{/if}}
      {{#if venueReview}}
      {{#each venueReview}}
      <div class="card">
        <div class="card-header">
          <div class="row">
            <img src="/public/images/user.png" alt="avatar" class="avatar" />
            <div class="user">
              <h2 class="name">{{this.reviewerId}}</h2>
              <p class="date">Posted on (Eastern Standard Time) : {{this.createdAt1}}</p>
            </div>
          </div>
        </div>
        <div class="card-body">
          <div class="stat">
            <p class="stat-chip">Rating : {{this.rating}}</p>
            <p class="stat-chip">Votes : {{this.votes}}</p>
          </div>
          <p class="desc">{{this.reviewText}}
          </p>
        </div>
        <div class="card-footer">
          <a href="/reviews/upvote/{{this._id}}/{{this.venueId}}" class="btn1">
            <i class="fa fa-thumbs-up"></i>
          </a>
          <a href="/reviews/downvote/{{this._id}}/{{this.venueId}}" class="btn1">
            <i class="fa fa-thumbs-down"></i>
          </a>
        </div>
      </div>
      {{/each}}
      {{else}}
      <div id="beta">
        <a href="/reviews/oldest/{{venueid}}" id="open-add-modal14" class="btn">
          Oldest </a>
        <a href="/reviews/newest/{{venueid}}" id="open-add-modal15" class="btn">
          Newest </a>
        <a href="/reviews/mostupvote/{{venueid}}" id="open-add-modal16" class="btn">
          Most Upvoted</a>
        <a href="/reviews/mostdownvote/{{venueid}}" id="open-add-modal17" class="btn">
          Most Downvoted</a>
        <a href="/reviews/highest/{{venueid}}" id="open-add-modal18" class="btn">
          Positive</a>
        <a href="/reviews/lowest/{{venueid}}" id="open-add-modal19" class="btn">
          Critical</a>
        <a href="/reviews/filter/{{venueid}}/1" id="open-add-modal20" class="btn">
          <i class="fas fa-star"></i> <i class="fa fa-plus"></i>
        </a>
        <a href="/reviews/filter/{{venueid}}/2" id="open-add-modal21" class="btn">
          <i class="fas fa-star"></i><i class="fas fa-star"></i> <i class="fa fa-plus"></i>
        </a>
        <a href="/reviews/filter/{{venueid}}/3" id="open-add-modal22" class="btn">
          <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i> <i class="fa fa-plus"></i>
        </a>
        <a href="/reviews/filter/{{venueid}}/4" id="open-add-modal23" class="btn">
          <i class="fas fa-star"></i> <i class="fas fa-star"></i><i class="fas fa-star"></i><i
            class="fas fa-star"></i><i class="fa fa-plus"></i>
        </a>
        <a href="/reviews/filter/{{venueid}}/5" id="open-add-modal24" class="btn">
          <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i
            class="fas fa-star"></i><i class="fa fa-plus"></i>
        </a>
      </div><br>
      <h2 class="act-title">No Reviews to display with selected filters </h2>
      {{/if}}
    </div>
  </div>
</section>
