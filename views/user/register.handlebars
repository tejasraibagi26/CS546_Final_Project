<div id="register-page">
  <div class="register-container">
    <h1 id="registerTitle">Register</h1>
    <h3 id="registerError" hidden></h3>
    <h3 id="registerError"> {{error}}</h3>
    <form action="/user/create" name="create" method="post" id="registerForm">
      <label class="registerLabel">First name:
        <input
          id="firstName"
          name="firstName"
          class="registerInput"
          placeholder="Enter First Name"
        />
      </label>
      <label class="registerLabel">Last name:
        <input
          id="lastName"
          name="lastName"
          class="registerInput"
          placeholder="Enter Last Name"
        />
      </label>
      <label class="registerLabel">Email:
        <input
          id="emailRegister"
          name="email"
          class="registerInput"
          placeholder="Enter Email"
        />
      </label>
      <label class="registerLabel">Password:
        <input
          id="firstPassword"
          type="password"
          name="password"
          class="registerInput"
          placeholder="Enter Password"
        />
      </label>
      <label class="registerLabel">Confirm Password:
        <input
          id="confirmPassword"
          type="password"
          class="registerInput"
          placeholder="Confirm Password"
        />
      </label>
      <label class="registerLabel">Age:
        <input
          id="age"
          type="number"
          min="1"
          max="128"
          name="age"
          class="registerInput"
          placeholder="Enter Age"
        />
      </label>
      <label class="registerLabel">Gender:
        <select id="gender" name="gender">
        </select>
      </label>
      <label class="registerLabel">Role:
        <select id="role" name="role">
          <option>User</option>
          <option>Owner</option>
        </select>
      </label>
      <label><input
          type="submit"
          id="registerSubmit"
          value="Register"
        /></label>
    </form>
    <a href="/user/login" id="loginLink">Already have an account? Click to Login
      In!</a>
  </div>
</div>
<script src="/public/js/gender.js"></script>